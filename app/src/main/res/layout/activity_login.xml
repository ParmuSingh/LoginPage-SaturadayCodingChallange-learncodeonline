<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_vertical"
    android:background="#52a337"
    android:id="@+id/main_layout"
    tools:context=".LoginActivity">

    <ImageView
        android:id="@+id/img"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:src="@drawable/lco_light"
        />

    <TextView
        android:id="@+id/signin_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Learncodeonline - Log in"
        android:layout_gravity="center"
        android:textColor="#000000"
        android:textSize="28dp"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="25dp"
        android:textStyle="bold"
        android:fontFamily="cursive"
        />

    <studio.carbonylgroup.textfieldboxes.TextFieldBoxes

        android:id="@+id/text_field_boxes_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:padding="10dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        app:enabled="true"
        app:useDenseSpacing="true"
        android:background="#c7d1be"
        android:layout_margin="20dp"
        app:helperTextColor="#FFFFFF"
        app:hasClearButton="true"
        app:labelText="Email"
        >

        <studio.carbonylgroup.textfieldboxes.ExtendedEditText
            android:id="@+id/extended_edit_text_username"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:imeOptions="actionNext" />
    </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>

    <studio.carbonylgroup.textfieldboxes.TextFieldBoxes

        android:id="@+id/text_field_boxes_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="1dp"
        android:padding="10dp"
        android:paddingLeft="50dp"
        android:paddingRight="50dp"
        app:enabled="true"
        app:useDenseSpacing="true"
        android:background="#c7d1be"
        app:helperTextColor="#FFFFFF"

        android:layout_margin="20dp"
        app:hasClearButton="true"
        app:labelText="Password"
        >

        <studio.carbonylgroup.textfieldboxes.ExtendedEditText
            android:id="@+id/extended_edit_text_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:inputType="textPassword"
            android:imeOptions="actionNext" />
    </studio.carbonylgroup.textfieldboxes.TextFieldBoxes>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_marginTop="20dp"
        android:orientation="horizontal">

        <com.dd.processbutton.iml.ActionProcessButton
            android:id="@+id/btnSignIn"
            android:layout_width="220dp"
            android:layout_height="wrap_content"


            android:text="Log in"
            android:textColor="@android:color/white"
            android:textSize="18sp"

            app:pb_colorComplete="@color/green_complete"
            app:pb_colorNormal="#6fce0a"
            app:pb_colorPressed="#6fce0a"
            app:pb_colorProgress="@color/purple_progress"
            app:pb_cornerRadius="20dp"
            app:pb_textComplete="Success"
            app:pb_textProgress="Logging in.." />

        <com.dd.processbutton.iml.ActionProcessButton
            android:id="@+id/btnSignUp"
            android:layout_width="130dp"
            android:layout_height="wrap_content"


            android:text="Sign up"
            android:textColor="@android:color/white"
            android:textSize="18sp"

            app:pb_colorComplete="@color/green_complete"
            app:pb_colorNormal="#6fce0a"
            app:pb_colorPressed="#6fce0a"
            app:pb_colorProgress="@color/purple_progress"
            app:pb_cornerRadius="20dp"
            app:pb_textComplete="Success"
            app:pb_textProgress="Please Wait.." />


    </LinearLayout>


    <com.suke.widget.SwitchButton
        android:id="@+id/switch_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
    />


</LinearLayout>